{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "allowJs": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "package.json",
    "index.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ]
}